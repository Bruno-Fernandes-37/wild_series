{% extends 'base.html.twig' %}

{% block title %}Season #{{season.number}}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
        </div>
        <h2>Saison - {{season.number}}</h2>
        {% for episode in season.episodes %}
        <div>
            <a href="{{ path('program_showEpisode', { 'programId': program.id , 'seasonId': season.id , 'episodeId': episode.id }) }}">
            <h3>{{episode.number}}-{{episode.title}}</h3>
            </a>
            <p>{{episode.synopsis}}</p>
        </div>
        {% endfor %}
    </div>

    <a href="{{ path('program_index') }}">
        Retour Ã  la liste des programmes
    </a>
{% endblock %}